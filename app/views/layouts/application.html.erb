<!DOCTYPE html>
<html>
<head>
  <title>Bugac</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

<%= render "layouts/navbar" %>

<content>
<div id="tartalom-wrapper">
<p class="pull-left" id="local-teszt">
<b>I18n.locale:</b> 
<%= I18n.locale %>
</p>

<p class="pull-right" id="local-teszt">
<%= link_to('HU', {locale: :hu}, {:class => 'flag-hu'}) %>
|
<%= link_to('EN', {locale: :en}, {:class => 'flag-en'}) %>
|
<%= link_to('DE', {locale: :de}, {:class => 'flag-de'}) %>
|
<%= link_to('FR', {locale: :fr}, {:class => 'flag-en'}) %>
|
<%= link_to('RU', {locale: :ru}, {:class => 'flag-en'}) %>
|
<%= link_to('AL', {locale: :al}, {:class => 'flag-en'}) %>
|
<%= link_to('IL', {locale: :il}, {:class => 'flag-en'}) %>
</p>

<div class="container" id="tartalom">

<%= yield %>

</div>

</div>
</content>

<%= render "layouts/footer" %>

</body>
</html>
